<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appmobile">
    <uses-feature android:name="android.hardware.camera" android:required="true"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppMobile">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".activities.MapsActivity"
            android:exported="false"/>

        <activity
            android:name=".activities.ActivityListarUsuario"
            android:label="Lista de Usuários"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityListarCadastro"
            android:label="Cadastros de Solicitações"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityListarServicos"
            android:label="Serviços solicitados"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityLogin"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityUsuario"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityCadastro"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityServico"
            android:exported="false" />
    </application>

</manifest>