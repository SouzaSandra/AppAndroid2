<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".activities.ActivityServico">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/servicos"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Cadastrar Serviço"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_Ordem"
            android:hint="Ordem Serviço:"
            android:inputType="numberSigned"
            android:background="@color/white"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <EditText
            android:id="@+id/edtDescrição"
            android:hint="Descrição:"
            android:inputType="text"
            android:background="@color/white"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <EditText
            android:id="@+id/edtLocal"
            android:hint="Local:"
            android:inputType="text"
            android:background="@color/white"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <EditText
            android:id="@+id/edtSetor"
            android:hint="Setor responsável:"
            android:inputType="textPersonName"
            android:background="@color/white"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <EditText
            android:id="@+id/edtEncarregado"
            android:hint=" Responsável:"
            android:inputType="text"
            android:background="@color/white"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <EditText
            android:id="@+id/edAtendente"
            android:hint="Nome do Atendente:"
            android:inputType="textPersonName"
            android:background="@color/white"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <EditText
            android:id="@+id/edtData"
            android:hint="Data da solicitação:"
            android:inputType="date"
            android:background="@color/white"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/btnSalvarServico"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="salvarServico"
            android:text="Salvar" />

    </LinearLayout>


</ScrollView>